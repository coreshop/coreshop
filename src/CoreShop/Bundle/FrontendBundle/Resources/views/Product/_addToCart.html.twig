{% if form %}
{% form_theme form '@CoreShopFrontend/Form/theme.html.twig' %}
{{ form_start(form, {'action': path('coreshop_cart_add', {'product': product.id|coreshop_string,'_redirect': _redirect})}) }}
    {{ form_errors(form) }}
    {% if form.cartItem.unitDefinition is not defined %}
        <div class="d-flex gap-2 mt-2">
    {% endif %}
    <div class="d-flex gap-2 mb-2">
        {% set relation_id = random() %}
        {{ form_row(form.cartItem.quantity, coreshop_test_form_attribute('quantity')|coreshop_merge_recursive({label: false, attr: {class: 'form-control cart-item-quantity cs-unit-input', 'data-cs-unit-identifier': relation_id }})) }}

        {% if form.cartItem.unitDefinition is defined %}
            {{ form_row(form.cartItem.unitDefinition, coreshop_test_form_attribute('unit')|coreshop_merge_recursive({label: false, row_attr: {class: 'me-2 flex-grow-1'}, attr: {class: 'form-select cs-unit-selector', 'data-cs-unit-identifier': relation_id}})) }}
        {% endif %}


    </div>

    <div class="input-group-append ml-2">
        <button type="submit" class="btn btn-primary mt-0" rel="nofollow" {{ coreshop_test_html_attribute('add-to-cart') }}>
           <i class="bi bi-cart-plus me-1"></i> {{ 'coreshop.ui.add_to_cart'|trans }}
        </button>
    </div>

    {% if form.cartItem.unitDefinition is not defined %}
        </div>
    {% endif %}

    {{ form_row(form._token) }}
{{ form_end(form, {'render_rest': false}) }}
{% endif %}
